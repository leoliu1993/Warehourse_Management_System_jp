<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>

    <constant name="struts.enable.DynamicMethodInvocation" value="true" />
    <constant name="struts.devMode" value="true" />

    <package name="shop" extends="struts-default" namespace="/">

        <!-- 配置首页访问的Action -->
		<action name="index" class="com.ncut.wms.index.action.IndexAction">
			<result name="index">/WEB-INF/jsp/index.jsp</result>
		</action>
		
		<!-- 配置商品管理模块 -->
		<action name="commodity_*" class="com.ncut.wms.commodity.action.CommodityAction" method="{1}">
			<result name="managementPage">/WEB-INF/jsp/commodityManagement.jsp</result>
			
		</action>
    </package>


</struts>
